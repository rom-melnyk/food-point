{
  "name": "food-point",
  "version": "0.0.1",
  "description": "Food Point site",
  "main": "server.es6",
  "config": {
    "port": 8080,
    "mysql": {
      "host": "localhost",
      "user": "root",
      "password": "",
      "database": "food_point"
    },
    "src": {
      "dir": "./src",
      "es": "app.es6",
      "scss": "style.scss"
    },
    "output": {
      "dir": "./static",
      "js": "script.js",
      "css": "style.css"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev-api": "nodemon --watch api --exec \"node --harmony --use_strict\" ./server.es6",
    "dev-static": "echo Run \\\"node --harmony --use_strict ./server.es6 --dev\\\"",
    "compile-statics": "browserify src/app.es6 -t babelify -t brfs -o static/script.js -v && uglifyjs static/script.js --screw-ie8 -c -m -o static/script.js",
    "compile-styles": "node-sass -x --output-style=compressed src/style.scss static/style.css"
  },
  "author": "Roman Melnyk",
  "license": "ISC",
  "dependencies": {
    "express": "^4.13.3",
    "mysql": "^2.9.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "body-parser": "^1.14.1",
    "brfs": "^1.4.1",
    "browserify": "^12.0.1",
    "mustache": "^2.2.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "socket.io": "^1.3.7",
    "uglify": "^0.1.5",
    "watch": "^0.16.0"
  }
}
